<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.mule.extensions</groupId>
        <artifactId>mule-extensions-archetype-parent</artifactId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <artifactId>mule-extensions-xml-archetype</artifactId>
    <packaging>maven-archetype</packaging>
    
    <name>Smart Connector Archetype</name>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.archetype</groupId>
                <artifactId>archetype-packaging</artifactId>
                <version>3.0.1</version>
            </extension>
        </extensions>

        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-archetype-plugin</artifactId>
                    <version>3.0.1</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <!-- When it is not running on a CI Environment the goal in the tests shouldn't include a custom setting.xml -->
        <!-- So %XML_ARCHETYPE_TESTS_SETTINGS_PLACEHOLDER% should be deleted in the goal.txt files -->
        <plugins>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>${maven.replacer.plugin}</version>
                <executions>
                    <execution>
                        <id>add-custom-settings-file</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <basedir>${project.build.directory}/test-classes/projects</basedir>
                    <includes>
                        <include>**/goal.txt</include>
                    </includes>
                    <replacements>
                        <replacement>
                            <token>%XML_ARCHETYPE_TESTS_SETTINGS_PLACEHOLDER%</token>
                            <value></value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <!-- When it is running on a CI Environment the goal in the tests should include a custom setting.xml to be able to download the deps-->
            <!-- So %XML_ARCHETYPE_TESTS_SETTINGS_PLACEHOLDER% should be replaced in the goal.txt files with the custom settings.xml-->
            <id>ci-environment</id>
            <activation>
                <property>
                    <name>mule.extension.archetype.testSettings</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.google.code.maven-replacer-plugin</groupId>
                        <artifactId>replacer</artifactId>
                        <version>${maven.replacer.plugin}</version>
                        <executions>
                            <execution>
                                <id>add-custom-settings-file</id>
                                <phase>test-compile</phase>
                                <goals>
                                    <goal>replace</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <regex>false</regex>
                            <basedir>${project.build.directory}/test-classes/projects</basedir>
                            <includes>
                                <include>**/goal.txt</include>
                            </includes>
                            <replacements>
                                <replacement>
                                    <token>%XML_ARCHETYPE_TESTS_SETTINGS_PLACEHOLDER%</token>
                                    <value>--settings ${mule.extension.archetype.testSettings}</value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
